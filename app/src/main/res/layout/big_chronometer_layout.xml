<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/chronometer"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eee"
        android:layout_marginTop="10dp">
        <Button
            android:id="@+id/stopwatch_start"
            android:text="@string/StopWatch_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#666"
            style="@style/Widget.Compat.NotificationActionContainer" />
        <Button
            android:id="@+id/stopwatch_pause"
            android:text="@string/StopWatch_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#666"
            style="@style/Widget.Compat.NotificationActionContainer" />
    </LinearLayout>


</LinearLayout>