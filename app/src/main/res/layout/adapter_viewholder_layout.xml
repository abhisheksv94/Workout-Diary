<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
   <android.support.v7.widget.CardView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/cardView"
       app:cardCornerRadius="30dp"
       android:backgroundTint="#E2F7FC"
       android:layout_margin="10dp">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:focusable="true"
           android:paddingStart="16dp"
           android:paddingEnd="16dp"
           android:paddingTop="10dp"
           android:paddingBottom="10dp"
           android:clickable="true"
           android:background="?selectableItemBackground"
           android:orientation="vertical">
           <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/date"
               android:layout_marginBottom="10dp"
               android:layout_centerHorizontal="true"
               android:layout_alignParentTop="true"
               android:textStyle="bold"
               android:textSize="16sp"
               android:background="@drawable/categorystyle"
               android:textColor="#fff"
               android:textAllCaps="false"/>
           <ImageButton
               android:layout_width="25dp"
               android:layout_height="25dp"
               android:id="@+id/delete"
               android:background="@drawable/ic_delete_sweep_black_48dp"
               />
           <ImageButton
               android:layout_width="25dp"
               android:layout_height="25dp"
               android:id="@+id/insert"
               android:background="@drawable/ic_add_circle_black_48dp"
               android:layout_alignParentEnd="true"/>
           <ImageButton
               android:layout_width="25dp"
               android:layout_height="25dp"
               android:id="@+id/clock"
               android:background="@drawable/ic_timer_black_24dp"
               android:layout_alignParentBottom="true"
               android:layout_alignParentEnd="true"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/values"
               android:orientation="vertical"
               android:layout_below="@+id/date"
               android:gravity="center_horizontal">

           </LinearLayout>
       </RelativeLayout>
   </android.support.v7.widget.CardView>

</RelativeLayout>